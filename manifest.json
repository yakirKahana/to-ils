{
    "manifest_version": 2,
    "name": "To Shekel",
    "version" : "1.0.1",

    "permissions": [
        "*://*/*",
        "contextMenus",
        "storage"

    ],

    "browser_action":{
        "default_icon":"img/logo.svg",
        "default_popup":"popup.html"
    },

    "content_scripts":[
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "css":[
                "content.css"
            ]
        }
    ],


    
    "background":{
        "page":"bg.html"
    }

}